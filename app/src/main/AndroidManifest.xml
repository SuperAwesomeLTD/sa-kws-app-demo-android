<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="superawesome.tv.kwsappdemo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/main_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/signin_name"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.LogoutActivity"
            android:label="@string/logout_name"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".activities.LeaderboardActivity"
            android:label="@string/leaderboard_name"
            android:screenOrientation="portrait"/>

        <service
            android:name=".receivers.RemoteNotificationReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>
