<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="superawesome.tv.kwsdemoapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">

        <!-- activities -->
        <activity
            android:name=".activities.main.MainActivity"
            android:label="@string/main_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.login.LoginActivity"
            android:label="@string/login_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.signup.SignUpActivity"
            android:label="@string/signin_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.leader.LeaderboardActivity"
            android:label="@string/leaderboard_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.user.UserActivity"
            android:label="@string/user_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.getappdata.GetAppDataActivity"
            android:label="@string/appdata_get_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.setappdata.SetAppDataActivity"
            android:label="@string/appdata_set_name"
            android:screenOrientation="portrait"/>

        <!-- services -->
    </application>

</manifest>
